{

  "manifest_version": 2,
  "name": "DGFBot",
  "version": "1.0",

  "description": "This is a bot for game Dream Girlfiend",

  "icons": {"96": "icons/DreamGirlfriend.png"},
  
  "permissions": [
    "activeTab",
	"tabs",
	"webNavigation",
	"storage"
  ],
   
  "background":{
    "scripts":["Functionality/background-script.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/DreamGirlfriend.png",
    "default_title": "DreamGirlfrendBot",
    "default_popup": "Functionality/popup/PopupPage/popup.html"
  }

}